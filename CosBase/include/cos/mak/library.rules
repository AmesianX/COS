#
# target context (deferred -> immediate)
#
LIBNAME := $(LIBPREFIX)$(library)$(TARGETEXT)

$(TARGET).%: TARGET    := $(TARGET)
$(TARGET).%: TARGETEXT := $(TARGETEXT)
$(TARGET).%: LIBNAME   := $(LIBNAME)

#
# clean targets
#
ifneq ($(filter $(TARGET).clean,$(GOALS)),)

.PHONY: $(TARGET).clean

$(TARGET).clean:
	$(RM) $(OBJDIR)
	$(RM) $(LIBDIR)/$(LIBNAME).*

endif # $(TARGET).clean

#
# build targets
#
ifneq ($(filter $(TARGET),$(GOALS)),)

.PHONY: $(TARGET) $(TARGET).ar $(TARGET).sh

$(TARGET): $(TARGET).ar $(TARGET).sh

#
# rules for building static library
#
ifneq ($(filter static,$(LIBTYPE)),)
$(TARGET).ar: $(LIBDIR)/$(LIBNAME)$(LIBAREXT)
else
$(TARGET).ar:
endif

$(LIBDIR)/$(LIBNAME)$(LIBAREXT): $(OBJECTS)
	@echo "*** Building " $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(AR) $@ $^
else
	 $(AR) $@ $^
endif

#
# rules for building shared library
#
ifneq ($(filter shared,$(LIBTYPE)),)
$(TARGET).sh: $(LIBDIR)/$(LIBNAME)$(LIBSHEXT)
else
$(TARGET).sh:
endif

$(LIBDIR)/$(LIBNAME)$(LIBSHEXT): $(OBJECTS) $(OBJDIR)/$(library)_$(COSSYM).o
	@echo "*** Building " $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(VERSION) $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/$(library)_$(COSSYM).c --mod=$(library) $@.$(VERSION)
	@$(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/$(library)_$(COSSYM).c -o $(<D)/$(library)_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(VERSION) $(LIBS) $(SYSLIBS)
	@$(LN) $(@F).$(VERSION) $@
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(VERSION) $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/$(library)_$(COSSYM).c --mod=$(library) $@.$(VERSION)
	 $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/$(library)_$(COSSYM).c -o $(<D)/$(library)_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(VERSION) $(LIBS) $(SYSLIBS)
	 $(LN) $(@F).$(VERSION) $@
endif

include $(MAKDIR)/mak/compile.rules

endif # $(TARGET)

# end of makefile
