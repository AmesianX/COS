#
# target context (deferred -> immediate)
#
BINNAME  := $(program)$(TARGETEXT)
SBINNAME := $(program)$(TARGETEXT)$(if $(TARGETEXT),s,_s)

$(TARGET).%: TARGET    := $(TARGET)
$(TARGET).%: TARGETEXT := $(TARGETEXT)
$(TARGET).%: BINNAME   := $(BINNAME)
$(TARGET).%: SBINNAME  := $(SBINNAME)

#
# clean targets
#
ifneq ($(filter $(TARGET).clean,$(GOALS)),)

.PHONY: $(TARGET).clean

$(TARGET).clean:
	$(RM) $(OBJDIR)
	$(RM) $(BINDIR)/$(BINNAME)
	$(RM) $(BINDIR)/$(SBINNAME)

endif # $(TARGET).clean

#
# build targets
#
ifneq ($(filter $(TARGET) $(TARGET).run $(TARGET).srun,$(GOALS)),)

.PHONY: $(TARGET) $(TARGET).run $(TARGET).bin $(TARGET).srun $(TARGET).sbin

$(TARGET): $(if $(filter static,$(LNKTYPE)),$(TARGET).sbin,) \
           $(if $(filter shared,$(LNKTYPE)),$(TARGET).bin, )

#
# rules for running program
#
$(TARGET).srun: $(TARGET).sbin
	@echo "*** Running" $(BINDIR)/$(SBINNAME)
ifneq ($(SHOW),yes)
	@$(BINDIR)/$(SBINNAME) $(ARGS)
else
	 $(BINDIR)/$(SBINNAME) $(ARGS)
endif

$(TARGET).run: $(TARGET).bin
	@echo "*** Running" $(BINDIR)/$(BINNAME)
ifneq ($(SHOW),yes)
	@export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | \
	 sed 's, :,:,g'` ; \
	 $(BINDIR)/$(BINNAME) $(ARGS)
else
	 export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | \
	 sed 's, :,:,g'` ; \
	 $(BINDIR)/$(BINNAME) $(ARGS)
endif

#
# rules for building program
#
$(TARGET).bin : $(BINDIR)/$(BINNAME)
$(TARGET).sbin: $(BINDIR)/$(SBINNAME)

$(BINDIR)/$(SBINNAME): CCFLAGS += $(STATIC_CC)
$(BINDIR)/$(SBINNAME): LDFLAGS += $(STATIC_LD)
$(BINDIR)/$(SBINNAME): $(OBJECTS) $(OBJDIR)/_$(COSSYM).o
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM)         --out=$(<D)/_$(COSSYM).c $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	@$(if $(STRIP),$(STRIP) $@,)
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM)         --out=$(<D)/_$(COSSYM).c $@
	 $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	 $(if $(STRIP),$(STRIP) $@,)
endif

$(BINDIR)/$(BINNAME): $(OBJECTS) $(OBJDIR)/_$(COSSYM).o
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/_$(COSSYM).c $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/_$(COSSYM).c $@
	 $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
endif

include $(MAKDIR)/mak/compile.rules

endif # $(TARGET)

# end of makefile
