#
# targets context (deferred -> immediate)
#
BINNAME  := $(program)$(TARGETEXT)
SBINNAME := $(program)$(TARGETEXT)$(if $(TARGETEXT),s,_s)

$(TARGET).%: TARGET    := $(TARGET)
$(TARGET).%: TARGETEXT := $(TARGETEXT)
$(TARGET).%: BINNAME   := $(BINNAME)
$(TARGET).%: SBINNAME  := $(SBINNAME)

#
# clean targets
#
ifneq ($(filter $(TARGET).clean,$(GOALS)),)

.PHONY: $(TARGET).clean

$(TARGET).clean:
	@  echo "*** Cleaning" $(TARGET)
	$_ $(RM) $(OBJDIR)
	$_ $(RM) $(BINDIR)/$(BINNAME)
	$_ $(RM) $(BINDIR)/$(SBINNAME)

endif # $(TARGET).clean

#
# build targets
#
ifneq ($(filter $(TARGET) $(TARGET).run $(TARGET).srun,$(GOALS)),)

.PHONY: $(TARGET)      $(TARGET).clear
.PHONY: $(TARGET).bin  $(TARGET).run
.PHONY: $(TARGET).sbin $(TARGET).srun

$(TARGET): $($(TARGET).pre) \
           $(if $(filter shared,$(LNKTYPE)),$(TARGET).bin, ) \
           $(if $(filter static,$(LNKTYPE)),$(TARGET).sbin,) \
           $($(TARGET).post)

#
# rules for building static program
#
$(TARGET).sbin: CCFLAGS += $(STATIC_CC)
$(TARGET).sbin: LDFLAGS += $(STATIC_LD)
$(TARGET).sbin: $(BINDIR)/$(SBINNAME)

$(BINDIR)/$(SBINNAME): $(OBJECTS) $(OBJDIR)/_$(COSSYM)_s.o
	@  echo "*** Building" $@
	@  $(MKDIR) $(@D)
	$_ $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	$_ $(EXEDIR)/$(COSSYM)         --out=$(<D)/_$(COSSYM)_s.c $@
	$_ $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM)_s.c -o $(<D)/_$(COSSYM)_s.o
	$_ $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	$_ $(if $(STRIP),$(STRIP) $@,)

#
# rules for building shared program
#
$(TARGET).bin: $(BINDIR)/$(BINNAME) $(TARGET).clear

$(BINDIR)/$(BINNAME): $(OBJECTS) $(OBJDIR)/_$(COSSYM).o
	@  echo "*** Building" $@
	@  $(MKDIR) $(@D)
	$_ $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	$_ $(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/_$(COSSYM).c $@
	$_ $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	$_ $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)

#
# rules for running static program (helper)
#
$(TARGET).srun: $(TARGET).sbin
	@  echo "*** Running" $(BINDIR)/$(SBINNAME)
	$_ $(BINDIR)/$(SBINNAME) $(ARGS)

#
# rules for running shared program (helper)
#
$(TARGET).run: $(TARGET).bin
	@echo "*** Running" $(BINDIR)/$(BINNAME)
	$_ export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | \
	   sed 's, :,:,g'` ; \
	   $(BINDIR)/$(BINNAME) $(ARGS)

#
# include other target rules
#
include $(MAKDIR)/mak/compile.rules

endif # $(TARGET)

# end of makefile
