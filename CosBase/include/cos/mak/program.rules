#
# target context (deferred -> immediate)
#
BINNAME := $(program)$(TARGETEXT)

$(TARGET).%: TARGET    := $(TARGET)
$(TARGET).%: TARGETEXT := $(TARGETEXT)
$(TARGET).%: BINNAME   := $(BINNAME)

#
# clean targets
#
ifneq ($(filter $(TARGET).clean,$(GOALS)),)

.PHONY: $(TARGET).clean

$(TARGET).clean:
	$(RM) $(OBJDIR)
	$(RM) $(BINDIR)/$(BINNAME)

endif # $(TARGET).clean

#
# build targets
#
ifneq ($(filter $(TARGET) $(TARGET).run,$(GOALS)),)

.PHONY: $(TARGET) $(TARGET).run $(TARGET).bin

$(TARGET): $(TARGET).bin

#
# rules for running program
#
$(TARGET).run: $(TARGET).bin
	@echo "*** Running" $(BINDIR)/$(BINNAME)
ifneq ($(SHOW),yes)
	@export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | \
	sed 's, :,:,g'` ; \
	$(BINDIR)/$(BINNAME) $(ARGS)
else
	export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | \
	sed 's, :,:,g'` ; \
	$(BINDIR)/$(BINNAME) $(ARGS)
endif

#
# rules for building program
#
$(TARGET).bin: $(BINDIR)/$(BINNAME)

$(BINDIR)/$(BINNAME): $(OBJECTS) $(OBJDIR)/_$(COSSYM).o
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/_$(COSSYM).c $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM) $(MODS) --out=$(<D)/_$(COSSYM).c $@
	 $(CC) $(INCLUDE) $(CCFLAGS) -c    $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
endif

include $(MAKDIR)/mak/compile.rules

endif # $(TARGET)

# end of makefile
