.PRECIOUS: $(OBJDIR)/%.d $(OBJDIR)/$(library)_$(COSGEN).d

#
# rule for generics
#
$(OBJDIR)/$(library)_$(COSGEN).c: $(GENERIC)
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(EXEDIR)/$(COSGEN) --out=$@ $^
else
	 $(EXEDIR)/$(COSGEN) --out=$@ $^
endif

$(GENERIC): $(EXEDIR)/$(COSCMT)

#
# rule for symbols (dummy)
#
$(OBJDIR)/$(library)_$(COSSYM).c:
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(EXEDIR)/$(COSSYM) --out=$@
else
	 $(EXEDIR)/$(COSSYM) --out=$@
endif

#
# rules for compilation
#
$(OBJDIR)/%.o: $(SRCDIR)/%.c $(OBJDIR)/%.d
	@echo "*** Compiling" $< "->" $@
ifneq ($(SHOW),yes)
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

$(OBJDIR)/$(library)_$(COSGEN).o: $(OBJDIR)/$(library)_$(COSGEN).c \
                                  $(OBJDIR)/$(library)_$(COSGEN).d
	@echo "*** Compiling generics"
ifneq ($(SHOW),yes)
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

$(OBJDIR)/$(library)_$(COSSYM).o: $(OBJDIR)/$(library)_$(COSSYM).c
	@echo "*** Compiling symbols"
ifneq ($(SHOW),yes)
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

#
# rules for dependencies
#
$(OBJDIR)/%.d: $(SRCDIR)/%.c
	@echo "*** Computing" $< "->" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(DEP) $(INCLUDE) $(CPPFLAGS) $< | \
   sed 's,$$[^:]*:,$(basename $@).o $(basename $@).d : ,g' > $@
else
	 $(DEP) $(INCLUDE) $(CPPFLAGS) $< | \
   sed 's,$$[^:]*:,$(basename $@).o $(basename $@).d : ,g' > $@
endif

$(OBJDIR)/$(library)_$(COSGEN).d: $(OBJDIR)/$(library)_$(COSGEN).c
	@echo "*** Computing generics"
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(DEP) $(INCLUDE) $(CPPFLAGS) $< | \
   sed 's,$$[^:]*:,$(basename $@).o $(basename $@).d : ,g' > $@
else
	 $(DEP) $(INCLUDE) $(CPPFLAGS) $< | \
   sed 's,$$[^:]*:,$(basename $@).o $(basename $@).d : ,g' > $@
endif

#
# include dependencies
#
-include $(DEPENDS)

# end of makefile
