.PHONY: $(TARGET) $(TARGET).run $(TARGET).clean $(TARGET).exe
.PRECIOUS: $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d

#
# target context
#
$(TARGET).%: TARGETEXT := $(TARGET_EXT)

#
# target rules
#
$(TARGET): $(TARGET).exe

$(TARGET).run: $(TARGET).exe
	@echo "*** Running" $(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT)
ifneq ($(SHOW),yes)
	@export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | sed 's/ //g'` ; \
	$(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT) $(ARGS)
else
	export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | sed 's/ //g'` ; \
	$(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT) $(ARGS)
endif

$(TARGET).clean:
	$(RM)  $(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT)
	$(RMDIR) $(BUILDDIR)/$(OBJDIR)/$(basename $@)

#
# rules for building program
#
$(TARGET).exe: $(BUILDDIR)/$(BINDIR)/$(program)$(TARGET_EXT)

$(BUILDDIR)/$(BINDIR)/$(program)$(TARGET_EXT): \
  $(foreach o,$(objects),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
	@$(EXEDIR)/$(COS_SYMBOL)  --out=$(<D)/_$(COS_SYMBOL).c
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COS_SYMBOL).c -o $(<D)/_$(COS_SYMBOL).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@ $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COS_SYMBOL)  --out=$(<D)/_$(COS_SYMBOL).c    $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COS_SYMBOL).c -o $(<D)/_$(COS_SYMBOL).o
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@ $(LIBS) $(SYSLIBS)
ifeq ($(TARGET),release)
	@$(STRIP) $@
endif
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@ $(LIBS) $(SYSLIBS)
ifeq ($(TARGET),release)
	 $(STRIP) $@
endif
endif

#
# rules for compilation
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.o: \
  $(BASEDIR)/$(SRCDIR)/%.c $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d
ifneq ($(SHOW),yes)
	@echo "*** Compiling" $< "->" $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

#
# rules for dependencies
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d: $(BASEDIR)/$(SRCDIR)/%.c
	@$(MKDIR) $(@D) ; $(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@

#
# include dependencies if required
#
ifneq ($(filter-out $(TARGET).clean,$(USERTARGETS)),)
-include $(addprefix $(BUILDDIR)/$(OBJDIR)/$(TARGET)/,$(addsuffix .d,$(objects)))
endif

# end of makefile
