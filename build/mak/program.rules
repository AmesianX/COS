.PHONY: $(TARGET) $(TARGET).run $(TARGET).clean $(TARGET).exe

#
# target context
#
$(TARGET).%: TARGETEXT := $(TARGET_EXT)

#
# target rules
#
$(TARGET): $(TARGET).exe

$(TARGET).run: $(TARGET).exe
	@echo "*** Running" $(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT)
ifneq ($(SHOW),yes)
	@export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | sed 's/ :/:/g'` ; \
	$(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT) $(ARGS)
else
	export $(SYSLIBPATH)=$$$(SYSLIBPATH)`echo "$(patsubst -L%,:%,$(LIBRARY))" | sed 's/ :/:/g'` ; \
	$(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT) $(ARGS)
endif

$(TARGET).clean:
	$(RM)  $(BUILDDIR)/$(BINDIR)/$(program)$(TARGETEXT)
	$(RMDIR) $(BUILDDIR)/$(OBJDIR)/$(basename $@)

#
# rules for building program
#
$(TARGET).exe: $(BUILDDIR)/$(BINDIR)/$(program)$(TARGET_EXT)

$(BUILDDIR)/$(BINDIR)/$(program)$(TARGET_EXT): \
  $(foreach o,$(objects) _$(COSSYM),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM)      --out=$(<D)/_$(COSSYM).c    $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM)      --out=$(<D)/_$(COSSYM).c    $@
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@ $(LIBS) $(SYSLIBS)
endif

include $(MAKDIR)/compile.rules

# end of makefile
