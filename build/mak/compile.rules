.PRECIOUS: $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d

#
# rules for generics
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSGEN).c: $(GENERIC)
ifneq ($(SHOW),yes)
	@$(EXEDIR)/$(COSGEN) --out=$@ $^
else
	 $(EXEDIR)/$(COSGEN) --out=$@ $^
endif

$(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSSYM).c:
ifneq ($(SHOW),yes)
	@$(EXEDIR)/$(COSSYM) --out=$@
else
	 $(EXEDIR)/$(COSSYM) --out=$@
endif

#
# rules for compilation
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.o: \
  $(BASEDIR)/$(SRCDIR)/%.c \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d
ifneq ($(SHOW),yes)
	@echo "*** Compiling" $< "->" $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

$(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSGEN).o: \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSGEN).c \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSGEN).d
ifneq ($(SHOW),yes)
	@echo "*** Compiling generics"
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

$(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSSYM).o: \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSSYM).c \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/_$(COSSYM).d
ifneq ($(SHOW),yes)
	@echo "*** Compiling symbols"
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

#
# rules for dependencies
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d: \
  $(BASEDIR)/$(SRCDIR)/%.c
ifneq ($(SHOW),yes)
	@$(MKDIR) $(@D)
	@$(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@
else
	@$(MKDIR) $(@D)
	 $(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@
endif

$(BUILDDIR)/$(OBJDIR)/$(TARGET)/_%.d: \
  $(BUILDDIR)/$(OBJDIR)/$(TARGET)/_%.c
ifneq ($(SHOW),yes)
	@$(MKDIR) $(@D)
	@$(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@
else
	@$(MKDIR) $(@D)
	 $(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@
endif

#
# include dependencies if required
#
ifneq ($(filter-out $(TARGET).clean,$(USERTARGETS)),)
-include $(addprefix $(BUILDDIR)/$(OBJDIR)/$(TARGET)/,$(addsuffix .d,$(objects)))
endif

# end of makefile
