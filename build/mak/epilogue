# default settings
include $(MAKDIR)/default

# load project rules
ifneq ($(program),)
include $(MAKDIR)/program
else ifneq ($(library),)
include $(MAKDIR)/library
else ifneq ($(plug-in),)
include $(MAKDIR)/plug-in
endif

# load package rules
ifneq ($(package),)
include $(MAKDIR)/package
endif

# end of makefile
