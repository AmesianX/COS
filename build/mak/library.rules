.PHONY: $(TARGET) $(TARGET).clean $(TARGET).ar $(TARGET).sh
.PRECIOUS: $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d

#
# target context
#
$(TARGET).%: TARGETEXT := $(TARGET_EXT)

#
# target rules
#
$(TARGET): $(TARGET).ar $(TARGET).sh

$(TARGET).clean:
	$(RM)  $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGETEXT).*
	$(RMDIR) $(BUILDDIR)/$(OBJDIR)/$(basename $@)

#
# rules for building archive library
#
ifneq ($(filter archive,$(LIBTYPE)),)
$(TARGET).ar: $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(AREXT)
else
$(TARGET).ar:
endif

$(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(AREXT): \
  $(foreach o,$(objects),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(AR) $@ $^
else
	 $(AR) $@ $^
endif

#
# rules for building shared library
#
ifneq ($(filter shared,$(LIBTYPE)),)
$(TARGET).sh: $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(SHEXT)
else
$(TARGET).sh:
endif

$(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(SHEXT): \
  $(foreach o,$(objects),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building" $@
	@$(MKDIR) $(@D)
	@$(EXEDIR)/$(COS_SYMBOL)  --out=$(<D)/_$(COS_SYMBOL).c
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COS_SYMBOL).c -o $(<D)/_$(COS_SYMBOL).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@.$(version) $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COS_SYMBOL)  --out=$(<D)/_$(COS_SYMBOL).c    $@.$(version) --static
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $(<D)/_$(COS_SYMBOL).c -o $(<D)/_$(COS_SYMBOL).o
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@.$(version) $(LIBS) $(SYSLIBS)
	@$(LN) $(@F).$(version) $@
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ $(<D)/_$(COS_SYMBOL).o -o $@.$(version) $(LIBS) $(SYSLIBS)
	 $(LN) $(@F).$(version) $@
endif

#
# rules for compilation
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.o: \
  $(BASEDIR)/$(SRCDIR)/%.c $(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d
ifneq ($(SHOW),yes)
	@echo "*** Compiling" $< "->" $@
	@$(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
else
	 $(CC) $(INCLUDE) $(CCFLAGS) -c $< -o $@
endif

#
# rules for dependencies
#
$(BUILDDIR)/$(OBJDIR)/$(TARGET)/%.d: $(BASEDIR)/$(SRCDIR)/%.c
	@$(MKDIR) $(@D) ; $(DEP) $(INCLUDE) $(CPPFLAGS) $< -o $@

#
# include dependencies if required
#
ifneq ($(filter-out $(TARGET).clean,$(USERTARGETS)),)
-include $(addprefix $(BUILDDIR)/$(OBJDIR)/$(TARGET)/,$(addsuffix .d,$(objects)))
endif

# end of makefile
