.PHONY: $(TARGET) $(TARGET).clean $(TARGET).ar $(TARGET).sh

#
# target context
#
$(TARGET).%: TARGETEXT := $(TARGET_EXT)

#
# target rules
#
$(TARGET): $(TARGET).sh $(TARGET).ar

$(TARGET).clean:
	$(RM)  $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGETEXT).*
	$(RMDIR) $(BUILDDIR)/$(OBJDIR)/$(basename $@)

#
# rules for building archive library
#
ifneq ($(filter archive,$(LIBTYPE)),)
$(TARGET).ar: $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(AREXT)
else
$(TARGET).ar:
endif

$(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(AREXT): \
  $(foreach o,$(objects),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building " $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(AR) $@ $^
else
	 $(AR) $@ $^
endif

#
# rules for building shared library
#
ifneq ($(filter shared,$(LIBTYPE)),)
$(TARGET).sh: $(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(SHEXT)
else
$(TARGET).sh:
endif

$(BUILDDIR)/$(LIBDIR)/$(LIBPREFIX)$(library)$(TARGET_EXT)$(SHEXT): \
  $(foreach o,$(objects) _$(COSSYM),$(BUILDDIR)/$(OBJDIR)/$(TARGET)/$(o).o)
	@echo "*** Building " $@
	@$(MKDIR) $(@D)
ifneq ($(SHOW),yes)
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(version) $(LIBS) $(SYSLIBS)
	@$(EXEDIR)/$(COSSYM) --auto --out=$(<D)/_$(COSSYM).c    $@.$(version)
	@$(CC) $(INCLUDE) $(CCFLAGS)   -c $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	@$(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(version) $(LIBS) $(SYSLIBS)
	@$(LN) $(@F).$(version) $@
else
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(version) $(LIBS) $(SYSLIBS)
	 $(EXEDIR)/$(COSSYM) --auto --out=$(<D)/_$(COSSYM).c    $@.$(version)
	 $(CC) $(INCLUDE) $(CCFLAGS)   -c $(<D)/_$(COSSYM).c -o $(<D)/_$(COSSYM).o
	 $(LD) $(LIBRARY) $(LDFLAGS) $^ -o $@.$(version) $(LIBS) $(SYSLIBS)
	 $(LN) $(@F).$(version) $@
endif

include $(MAKDIR)/compile.rules

# end of makefile
